<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:state_pressed="true">
        <shape android:shape="rectangle" >
            <size
                android:height="40dp"
                android:width="100dp"/>
            <corners android:radius="35dp"/>
            <stroke android:width="1dp" android:color="#003f6a" />
            <solid android:color="#003f6a"/>
        </shape>
    </item>

    <item android:state_checked="true">
        <shape android:shape="rectangle" >
            <size
                android:height="40dp"
                android:width="100dp"/>
            <corners android:radius="35dp"/>
            <stroke android:width="1dp" android:color="#007bd0" />
            <solid android:color="#007bd0" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle" >
            <size
                android:height="40dp"
                android:width="100dp"/>
            <corners android:radius="35dp"/>
            <stroke android:width="1dp" android:color="#007bd0" />
            <solid android:color="#ffffff" />
        </shape>
    </item>
</selector>

